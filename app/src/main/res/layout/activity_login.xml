<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@color/bonebackgroundcolor">

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/palebrownbtn"
        android:fontFamily="@font/inknutantiqua_medium"
        android:textSize="32sp" />

    <!-- Usn Start-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:text="Username : "
        android:textColor="@color/black"
        android:fontFamily="@font/inknutantiqua_semibold"
        android:textSize="22sp"
        />

    <EditText
        android:id="@+id/edtlg_username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Masukkan Username"
        android:inputType="text"
        android:background="@drawable/edittxt_shape"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/inknutantiqua_regular"
        />
    <!-- Usn End-->

    <!-- Password Start-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:text="Password : "
        android:textColor="@color/black"
        android:fontFamily="@font/inknutantiqua_semibold"
        android:textSize="22sp"
        />

    <EditText
        android:id="@+id/edtlg_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Masukkan Password"
        android:inputType="textPassword"
        android:background="@drawable/edittxt_shape"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/inknutantiqua_regular"
        />
    <!-- Password End-->

    <!-- Button Login Start-->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="Login"
        android:layout_marginTop="30dp"
        android:layout_marginRight="55dp"
        android:layout_marginLeft="55dp"
        android:layout_gravity="center"
        />
    <!-- Button Login End-->


</LinearLayout>